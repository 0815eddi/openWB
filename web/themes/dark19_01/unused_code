    <?php
        // generate html code dynamically for all charging points
        for($i=1; $i <= 3; $i++) {
            echo '<!-- options for charging Point '.$i.', each line initially not visible -->'."\n";
            echo '    <div id="directChargeSubModeLp'.$i.'div" class="row regularTextStyle" style="visibility: hidden">'."\n";
            echo '        <div class="col-xs-3">'."\n";
            echo '            <span class="nameLp'.$i.'"></span>'."\n";
