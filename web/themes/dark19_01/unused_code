            echo '        <div class="col-xs-2">'."\n";
            echo '            <select type="text" name="directChargeSubModeLp'.$i.'" id="directChargeSubModeLp'.$i.'" class="dropdownStyle">'."\n";
            // build option-tags from array of options and set selected to proper tag
            $options = array("Keine", "Lademenge", "SoC");
            foreach ($options as $key => $value) {
                $echoString = '                <option ';
                if(${'msmoduslp'.$i.'old'} == $key) $echoString .= 'selected';  // adds keyword to selected option
                $echoString .=  ' value="'.$key.'">'.$value.'</option>'."\n";
                echo $echoString;
            }
            echo '            </select>'."\n";
            echo '        </div>'."\n\n";
            echo '        <!-- parameters for charging Point '.$i.' options, initially hidden-->'."\n";
            echo '        <div class="col-xs-3">'."\n";
